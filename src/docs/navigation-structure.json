  "designSystem": {
    "header": {
      "typography": {
        "menuItems": "text-sm (14px)",
        "logo": "text-xl (20px)"
      },
      "spacing": {
        "height": "h-20 (80px)",
        "horizontalGap": "gap-8 (32px)",
        "padding": "px-6 lg:px-8"
      },
      "states": {
        "default": "text-gray-300",
        "hover": "text-[#00FF88]",
        "active": "text-[#00FF88] with bottom border"
      },
      "dropdown": {
        "width": "w-72 (288px)",
        "background": "bg-black/95 backdrop-blur-xl",
        "border": "border-white/10",
        "itemPadding": "px-6 py-3",
        "hoverState": "bg-[#00FF88]/10"
      },
      "cta": {
        "background": "gradient from-[#00FF88] to-[#00C8FF]",
        "textColor": "black",
        "hoverEffect": "opacity-90 + scale-105",
        "shadow": "shadow-lg shadow-[#00FF88]/20"
      }
    },
    "footer": {
      "typography": {
        "columnTitle": "text-sm uppercase tracking-wider",
        "links": "text-sm (14px)",
        "copyright": "text-sm text-gray-500"
      },
      "layout": {
        "grid": "grid-cols-2 md:grid-cols-5",
        "columnGap": "gap-8 lg:gap-12",
        "padding": "py-16 px-6 lg:px-8"
      },
      "states": {
        "linkDefault": "text-gray-400",
        "linkHover": "text-[#00FF88]",
        "transition": "duration-200"
      },
      "social": {
        "size": "w-10 h-10",
        "background": "bg-white/5",
        "hoverBackground": "gradient from-[#00FF88]/20 to-[#00C8FF]/20",
        "border": "border-white/10 hover:border-[#00FF88]/50"
      }
    }
  },
  "uxGuidelines": {
    "header": {
      "principles": [
        "Keep primary navigation items to 7 or fewer for optimal cognition",
        "Group related items under 'Resources' dropdown to reduce visual clutter",
        "Use hover intent for dropdown (desktop) with 200ms delay",
        "Implement sticky header with blur effect on scroll for context retention",
        "Highlight 'Sign Up' CTA with gradient to drive conversion",
        "Ensure 44px minimum touch target for mobile menu items"
      ],
      "accessibility": [
        "Keyboard navigable dropdown with arrow keys and ESC to close",
        "ARIA labels for icon-only elements",
        "Focus visible states with outline-[#00FF88]",
        "Color contrast ratio minimum 4.5:1"
      ]
    },
    "footer": {
      "principles": [
        "4-column layout provides clear information hierarchy",
        "Group by user intent: Product (features), Company (trust), Support (help), Legal (compliance)",
        "Place social icons in brand column for visual cohesion",
        "Bottom bar includes copyright, utility links, and language selector",
        "Use subtle hover states to maintain sophisticated aesthetic",
        "Include language selector for international expansion"
      ],
      "bestPractices": [
        "Most clicked footer links: Pricing, Contact, Privacy Policy",
        "Place 'Contact Us' in Company section for discoverability",
        "Include 'Security' and 'Compliance' for B2B trust signals",
        "Link to Status page for transparency",
        "Maintain consistent link styling throughout footer"
      ]
    },
    "responsive": {
      "mobile": [
        "Collapse navigation to hamburger menu below 1024px",
        "Stack footer columns vertically on mobile (2 cols on tablet)",
        "Full-width CTA buttons in mobile menu",
        "Accordion-style Resources submenu with slide animation",
        "24px minimum margin on mobile for safe areas"
      ],
      "tablet": [
        "Show condensed navigation at 768px-1024px",
        "2x2 footer grid for optimal tablet layout",
        "Maintain dropdown functionality on tablet landscape"
      ]
    }
  }
